{
  "title": "X-Ray Reflectometry Measurement",
  "type": "object",
  "properties": {
    "name": {
      "title": "Measurement Name",
      "type": "text",
      "default": "XRR-",
      "minLength": 1,
      "maxLength": 100,
      "pattern": "^XRR-[0-9]+$"
    },
    "sample": {
      "title": "Sample",
      "type": "sample"
    },
    "created": {
      "title": "Creation Datetime",
      "type": "datetime"
    },
    "slitWidth": {
      "title": "Slit Width",
      "type": "quantity",
      "units": "mm"
    },
    "type": {
      "title": "Measurement Type",
      "type": "text",
      "choices": [
        "Rocking-Curve-Scan",
        "ω-2θ-Scan",
        "Z-Scan",
        "χ-Scan"
      ]
    },
    "minZRange": {
      "title": "Min. Z-Range",
      "type": "quantity",
      "units": "mm"
    },
    "maxZRange": {
      "title": "Max. Z-Range",
      "type": "quantity",
      "units": "mm"
    },
    "stepSize": {
      "title": "Step Size",
      "type": "quantity",
      "units": "mm"
    },
    "stepTime": {
      "title": "Step Time",
      "type": "quantity",
      "units": "s"
    },
    "temperature": {
      "title": "Temperature",
      "type": "quantity",
      "units": "degC",
      "default": 293.15
    }
  },
  "propertyOrder": ["name", "sample", "created", "slitWidth", "type", "minZRange", "maxZRange", "stepSize", "stepTime", "temperature"],
  "required": ["name", "sample", "created", "type"]
}